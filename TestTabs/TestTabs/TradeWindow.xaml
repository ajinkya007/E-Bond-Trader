        <Label x:Name="BondISINLabel" Content="" HorizontalAlignment="Left" Height="41" Margin="30,34,0,0" VerticalAlignment="Top" Width="137" FontSize="21.333" FontFamily="Plantagenet Cherokee"/>
        <Label x:Name="BondTitleLabel" Content="" HorizontalAlignment="Left" Height="41" Margin="219,34,0,0" VerticalAlignment="Top" Width="186" FontSize="21.333" FontFamily="Plantagenet Cherokee"/>
        <Label x:Name="BondPriceLabel" Content="Label" HorizontalAlignment="Left" Height="48" Margin="99,112,0,0" VerticalAlignment="Top" Width="134" FontSize="24" FontFamily="Plantagenet Cherokee" Foreground="#FF040404"/>

